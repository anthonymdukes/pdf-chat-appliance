# Use Python 3.12 slim image for development
FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies including development tools
RUN apt-get update && apt-get install -y \
    curl \
    git \
    vim \
    htop \
    procps \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies including development tools
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir pytest pytest-cov debugpy

# Copy application code
COPY . .

# Create necessary directories
RUN mkdir -p /app/data /app/documents /app/logs

# Set environment variables
ENV PYTHONPATH=/app
ENV PDFCHAT_CONFIG_FILE=/app/config/default.yaml
ENV PDFCHAT_LOG_LEVEL=DEBUG

# Expose ports
EXPOSE 5000 5678

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:5000/health || exit 1

# Default command for development
CMD ["python", "pdfchat.py", "serve", "--host", "0.0.0.0", "--port", "5000", "--debug"] 